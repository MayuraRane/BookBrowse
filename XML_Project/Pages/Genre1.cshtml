@page
@using MyBooks
@model XML_Project.Pages.Genre1Model
@{
    ViewData["Title"] = "Thriller";
    BooksInfo books = (BooksInfo)ViewData["BooksInfo"];
}



<head>
    <link rel="stylesheet" href="site.css">
</head>

<div class="text-center">
    <h1 class="display-4">Thrillers Books</h1>
    
    <table class="table align-middle mb-0">
        <thead class="bg-light">
        <tr>
            <th>Image</th>    
            <th>Title</th>
            <th>Author</th>
            <th>Description</th>
        </tr>
        </thead>
        @{
            foreach (Item book in books.Items)
            {
                var authors1 = "";
                foreach (var x in @book.VolumeInfo.Authors)
                {
                    authors1 = authors1 + " " + x;
                }
                <tr>
                    <td><img src="@book.VolumeInfo.ImageLinks.Thumbnail" alt="MyImg"/></td>
                    <td>@book.VolumeInfo.Title</td>
                    <td>@authors1</td>
                    <td class="desp">@book.VolumeInfo.Description</td>
                </tr>
            }

            }
        
    </table>
    <p>Click on the image to download it:<p>
        <a href="Genre1.cshtml" download="/Index.cshtml">
            <img src="/images/myw3schoolsimage.jpg" alt="W3Schools" width="104" height="142">
        </a>
</div>

