@page
@using MyBooksBestSellers
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    BestSellers books = (BestSellers)ViewData["BestSellers"];
    
}
<head>
    <link rel="stylesheet" href="site.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</head>


<div class="text-center">
    <div class="container welcomebox">

        <div class="row">

            <div class="col logoimg">

                <img src="/Images/BookBrowse_Logo1.jpg" alt="BookBrowseLogo" width="300" height="300" />

            </div>

            <div class="col weltext">

                <h1 class="Welcome">Welcome to BookBrowse!</h1>
                <h3>What are you reading next?</h3>
                <h3>Let's browse..</h3>

            </div>

        </div>

    </div>

    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/Images/Cover2.png" class="d-block w-100" height="450" alt="Cover1">
            </div>
            <div class="carousel-item">
                <img src="/Images/Cover1.png" class="d-block w-100" height="450" alt="Cover2">
            </div>
            <div class="carousel-item">
                <img src="/Images/Cover3.png" class="d-block w-100" height="450" alt="Cover3">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <br />
    <br />

    <h2>NY Times Best Selling Books for Fiction</h2>
    </br>
    <div class="row row-cols-1 row-cols-md-5 row-cols-xl-5">
        @{
            
            foreach (Book book in books.Results.Books)
            {
                var allAuthors = "";
                foreach(var x in @book.Author)
                {
                    allAuthors = allAuthors + x;
                }
                <div class="card-deck cardcont">
                    <div class="card h-100">
                            <img class="card-img-top" src="@book.BookImage" alt="booktitle" />
                        <div class="card-body d-flex flex-column">
                                <h4 class="card-title"><a>@book.Title </a></h4>
                                <p class="card-text">@allAuthors</p>
                            <div class="card-text">
                                <a href="@book.AmazonProductUrl" class="btn align-self-end">Buy now</a>
                            </div>
                            </div>
                        </div>
                </div>
            }
               
        }
    </div>
</div>


